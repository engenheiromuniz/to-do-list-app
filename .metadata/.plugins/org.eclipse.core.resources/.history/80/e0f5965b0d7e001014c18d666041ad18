package com.mztec.to_do_list_app.controller;

import com.mztec.to_do_list_app.model.Task;
import com.mztec.to_do_list_app.service.TaskService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;

@Controller // Marks this class as a Spring MVC controller
@RequestMapping("/tasks") // Base path for all methods in this controller
public class TaskController {

    @Autowired // Injects the TaskService dependency
    private TaskService taskService;

    // Displays the list of all tasks
    @GetMapping
    public String listTasks(Model model) {
        model.addAttribute("tasks", taskService.getAllTasks());
        return "tasks"; // Refers to src/main/resources/templates/tasks.html
    }

    // Displays the form to add a new task
    @GetMapping("/new")
    public String showAddTaskForm(Model model) {
        model.addAttribute("task", new Task()); // Empty Task object for form binding
        return "task-form"; // Refers to src/main/resources/templates/task-form.html
    }

    // Handles the submission of a new task form
    @PostMapping("/save")
    public String saveTask(@ModelAttribute Task task) {
        taskService.createTask(task);
        return "redirect:/tasks"; // Redirects to the task list page
    }

    // Displays the form to edit an existing task
    @GetMapping("/edit/{id}")
    public String showEditTaskForm(@PathVariable Long id, Model model) {
        Task task = taskService.getTaskById(id)
                .orElseThrow(() -> new IllegalArgumentException("Invalid task Id:" + id));
        model.addAttribute("task", task);
        return "task-form"; // Reuses the task-form for editing
    }

    // Handles the submission of an edited task form
    @PostMapping("/update/{id}")
    public String updateTask(@PathVariable Long id, @ModelAttribute Task task) {
        taskService.updateTask(id, task);
        return "redirect:/tasks"; // Redirects to the task list page
    }

    // Handles the deletion of a task
    @GetMapping("/delete/{id}")
    public String deleteTask(@PathVariable Long id) {
        taskService.deleteTask(id);
        return "redirect:/tasks"; // Redirects to the task list page
    }
}
